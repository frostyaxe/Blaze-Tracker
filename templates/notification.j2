{% extends "admin_base.j2" %}
{% block title %}
	Notification
{% endblock %}


{% block external_js %}
	<script src="{{ url_for('static',filename='js/notification.js') }}" ></script>
		<script>
		$(document).ready(function(){
		$("#page-content").css("margin-left", "13%");
		});
	</script>
{% endblock %}

{% block page %}
	
	<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
		  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
		    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
		  </symbol>
		  <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
		    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
		  </symbol>
		  <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
		    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
		  </symbol>
	 </svg>
	<div class="alert align-items-center small mt-5" role="alert" id="alertContainer" style="display: none;">
		<svg class="bi flex-shrink-0 me-2" width="14" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
		<div id="registrationAlert">
		    An example danger alert with an icon
	    </div>
	</div>	
	
	<div class="form-container">
		<form id="notificationForm">
			  <div class="form-group">
			    <label for="notificationTitle"><h5 class="lead">Title</h3></label>
			    <input type="text" class="form-control" id="notificationTitle" aria-describedby="appName" placeholder="Enter Notification Title" required>
			    <small class="form-text text-muted">(Title of the notice)</small></br></br>
			   	<label for="notificationMessage"><h5 class="lead">Message</h3></label>
			    <input type="text" class="form-control" id="notificationMessage" aria-describedby="appName" placeholder="Enter Notification Message" required>
			    <small class="form-text text-muted">(Message of the notice)</small></br></br>
			   
			  </div>
			 <div class="form-group">
			    <button type="button" id="submitForm" class="btn btn-outline-secondary">Submit</button>
			    <button type="button" id="displayNotice" class="btn btn-outline-secondary">Display Notice</button>
			    <button type="button" id="hideNotice" class="btn btn-outline-secondary">Hide Notice</button>
			 </div>
		</form>
	</div>

{% endblock %}

